generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id        String @id @default(auto()) @map("_id") @db.ObjectId
  email     String @unique
  userName  String @unique
  firstName String
  lastName  String
  password  String
}

model Recipe {
  id           String    @id @default(auto()) @map("_id") @db.ObjectId
  name         String
  ingredients  String[]
  instructions String[]
  tastes       String[]
  type         String?
  mealType     String?
  userId       String?   @db.ObjectId
  dateCreated  DateTime?
  dateUpdated  DateTime?
}
